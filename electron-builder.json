{
  "appId": "com.roadofwar.game",
  "productName": "Road of War",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": "dmg",
    "icon": "build/icon.icns",
    "category": "public.app-category.games"
  },
  "linux": {
    "target": "AppImage",
    "icon": "build/icon.png",
    "category": "Game"
  }
}

